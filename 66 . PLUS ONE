class Solution {
public:
    vector<int> plusOne(vector<int>& digits) {
       int n = digits.size();
        // traversing in reverse direction // case 1
        for(int i = n-1 ; i>=0 ; i-- ){
            if(digits[i]!=9){
                digits[i]++;
                break;
            }
            // case 2 : if 9 is at tha position because 9 + 1 = 10 hare digit become 0
            else{
                digits[i]=0;
            }
        }
        
        // case 3 : if 9 + 1 = 10 then adding the carry at last by creating new element position 
        if(digits[0]==0){
             vector<int> result(n+1,0);
             result[0] = 1;
             return result ;   
        }
        
        // returning final digits 
        return digits ;
   }
};
